mixin btn(params)
    -
        const { label,
                type='submit',
                className='',
                light=false, // true if --light
                gray=false, // --gray
                linkStyle=false, // --link-style
                arrow=false, // --arrow
                href,
                disabled } = params;

        const lightMod = (light) ? 'btn--light' : '';
        const linkStyleMod = (linkStyle) ? 'btn--link-style' : '';
        const arrowMod = (arrow) ? 'btn--arrow' : '';
        const grayMod = (gray) ? 'btn--gray' : '';

        const resultClassName = `btn ${className} ${lightMod} ${linkStyleMod} ${arrowMod} ${grayMod}`; // all classes

    if type === 'link'
        a(
            class=resultClassName
            href=href
            disabled=disabled
        )
            span.btn__label= label
            i.btn__arrow.material-icons arrow_forward
    else
        button(
            class=resultClassName
            type=type
            disabled=disabled
        )
            span.btn__label= label
            i.btn__arrow.material-icons arrow_forward
