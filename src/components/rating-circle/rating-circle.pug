include ./../bullet-list/bullet-list

mixin rating-circle(params)
    - const { greatVotes, goodVotes, okVotes, badVotes } = params;

    div.rating-circle(
        data-great-votes=greatVotes
        data-good-votes=goodVotes
        data-ok-votes=okVotes
        data-bad-votes=badVotes
    )
        div.rating-circle__chart
            div.rating-circle__votes
                span.rating-circle__votes-count
                br
                span.rating-circle__votes-noun

        +bullet-list({
          voteColored: true,
          hoverable: true,
          items: [
            'Великолепно',
            'Хорошо',
            'Удовлетворительно',
            'Разочарован',
          ],
        })
