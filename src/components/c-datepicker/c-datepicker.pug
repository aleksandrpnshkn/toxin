include ./../btn/btn

mixin c-datepicker(param)
    - const { twoFields } = param;
    - const DEFAULT_VALUE = 'ДД.ММ.ГГГГ';

    div.c-datepicker(data-two-fields= (twoFields) ? 'true' : 'false')
        div.c-datepicker__output
            input.c-datepicker__input(value=DEFAULT_VALUE disabled=twoFields)

            if twoFields
                input.c-datepicker__start(type='text' value=DEFAULT_VALUE readonly)
                input.c-datepicker__end(type='text' value=DEFAULT_VALUE readonly)

        div.c-datepicker__controls.hidden
            div.c-datepicker__reset
                +btn({
                  label: 'Очистить',
                  type: 'button',
                  linkStyle: true,
                  gray: true,
                })
            div.c-datepicker__apply
                +btn({
                  label: 'Применить',
                  type: 'button',
                  linkStyle: true,
                })
