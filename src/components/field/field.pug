//- Input for text/number/email/password/
mixin field(params)
    -
        const { label,
                name,
                type='text',
                placeholder,
                className='', // Additional classes for input
                value,
                disabled=false } = params;
        const id = `${type}-${name}`;

    case type
        when 'password'
        when 'number'
        when 'email'
        when 'text'
            .field
                label.field__label(for=id)= label
                input(
                    class=`field__input ${className}`
                    type=type
                    name=name
                    placeholder=placeholder
                    value=value
                    disabled=disabled
                )

        default
            p This field type is not defined in this component
